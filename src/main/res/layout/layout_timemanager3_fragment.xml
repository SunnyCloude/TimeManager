<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/transparent_white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/read"/>
        <TextView
            android:id="@+id/edit_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择工作时间(分钟)"
            android:textSize="20sp"
            android:textColor="#000"
            android:maxLines="1"
            android:gravity="center"
            android:enabled="false"/>
            <Spinner
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:entries="@array/worktime"
                android:background="@drawable/rb_darkblue"
                android:gravity="center"
                android:id="@+id/worktime"
                android:layout_marginLeft="15dp">
            </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/transparent_white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/rest"/>
        <TextView
            android:id="@+id/edit_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择休息时间(分钟)"
            android:textSize="20sp"
            android:textColor="#000"
            android:maxLines="1"
            android:gravity="center"
            android:enabled="false"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rb_darkblue"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/darkblue"
                        android:textSize="15sp"
                        android:id="@+id/resttime1"/>

                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rb_darkblue"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/darkblue"
                        android:textSize="15sp"
                        android:id="@+id/resttime2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rb_darkblue"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="@color/darkblue"
                        android:textSize="15sp"
                        android:id="@+id/resttime3"/>

                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rb_darkblue"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/darkblue"
                        android:textSize="15sp"
                        android:id="@+id/resttime4"/>
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/transparent_white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/circle"/>
        <TextView
            android:id="@+id/edit_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择循环次数"
            android:textSize="20sp"
            android:textColor="#000"
            android:maxLines="1"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rb_darkblue"
                        android:text="1"
                        android:checked="false"
                        android:button="@null"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/darkblue"
                        android:layout_margin="5dp"
                        android:id="@+id/circle1"/>
                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rb_darkblue"
                        android:text="2"
                        android:checked="false"
                        android:button="@null"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/darkblue"
                        android:layout_margin="5dp"
                        android:id="@+id/circle2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rb_darkblue"
                        android:text="3"
                        android:checked="false"
                        android:button="@null"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/darkblue"
                        android:layout_margin="5dp"
                        android:id="@+id/circle3"/>
                    <RadioButton
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rb_darkblue"
                        android:text="4"
                        android:checked="false"
                        android:button="@null"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/darkblue"
                        android:layout_margin="5dp"
                        android:id="@+id/circle4"/>
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:background="@drawable/transparent_white"
            android:visibility="invisible">
            <TextView
                android:id="@+id/timetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作时间"
                android:textColor="@color/darkblue"
                android:gravity="center"
                android:textSize="20sp"/>
            <Chronometer
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/darkblue"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_start"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="开始番茄吧！"
            android:textColor="#ffffff"
            android:background="@color/darkblue"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="什么是番茄工作法？"
            android:textColor="@color/darkblue"
            android:background="@drawable/transparent_white"
            android:layout_marginTop="10dp"
            android:padding="5dp"/>
    </LinearLayout>
</LinearLayout>